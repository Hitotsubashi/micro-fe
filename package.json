{
  "name": "micro-fe",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://gitee.com/Hitotsubashi/micro-fe.git",
  "author": "Hitotsubashi",
  "license": "MIT",
  "scripts": {
    "all:install": "npm-run-all --serial install:*",
    "all:start": "npm-run-all --parallel start:*",
    "install:main": "cd master-app && yarn install",
    "install:vue": "cd sub-app/vue-app && yarn install",
    "install:vue3": "cd sub-app/vue3-ts-app && yarn install",
    "install:react": "cd sub-app/react-ts-app && yarn install",
    "install:html": "cd sub-app/pure-html-app && yarn install",
    "start:main": "cd master-app && yarn start",
    "start:vue": "cd sub-app/vue-app && yarn start",
    "start:vue3": "cd sub-app/vue3-ts-app && yarn start",
    "start:react": "cd sub-app/react-ts-app && yarn start",
    "start:html": "cd sub-app/pure-html-app && yarn start",
    "build:main": "cd master-app && yarn build",
    "build:vue": "cd sub-app/vue-app && yarn build",
    "build:vue3": "cd sub-app/vue3-ts-app && yarn build",
    "build:react": "cd sub-app/react-ts-app && yarn build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
